<div>
    <%= flash[:notice] %>
</div>
<%= render 'books/list', user: @user, book: @book %>
<div class="col-md-8 offfset-md-1">
   <h2>Book detail</h2>
    <table>
        <tbody>
            <tr></tr>
            <td>
                <%= image_tag @user.get_profile_image(100,100) %><br />
                <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td>
                <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
                <%= link_to @book.body,book_path(@book.id) %>
            </td>
            <td>
                <%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>
                  <a>Edit</a>
                <% end %>
            </td>
            <td>
                <% if @book.user_id == current_user.id %>
                 <%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" do %>
                     <a>Destroy</a>
                 <% end %>
                <% end %>

            </td>
        </tbody>
    </table>
</div>
