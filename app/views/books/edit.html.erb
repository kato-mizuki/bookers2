<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1><br />
      <%= form_with model: @book do |f| %>
      <%= f.label :Title %>
      <br />
      <%= f.text_field :title %>
      <br /><br />
      <%= f.label :Opinion %>
      <br />
      <%= f.text_area :body %>
      <br /><br />
      <%= f.submit 'Update Book' %>
      <% end %>
      <br />
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
