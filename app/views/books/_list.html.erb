 <div class="container px-5 psx-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
         <% if user.image.attached? %>
          <%= image_tag user.image, size: "100x100" %>
         <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
         <% end %>
         <table class="table">
           <tr>
             <th>name</th>
             <th><%= user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= user.introduction %></th>
           </tr>
         </table>
        <br />
         <div class="row">
           <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
           <% end %>
         </div>
         <h2 class="mt-3">New book</h2>
         <%= form_with model: book do |f| %>
         <div class="field">
          <%= f.label :Title %><br />
          <%= f.text_field :title %>
         </div>

          <div class="field">
            <%= f.label :Opinion %><br />
            <%= f.text_area :body %>
          </div>
          <br />
            <%= f.submit 'Create Book' %>
           <% end %>
    </div>
   </div>
</div>