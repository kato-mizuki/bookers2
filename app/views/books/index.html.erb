<h2>New book</h2>
 <%= form_with model: Book.new do |f| %>
 <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Opinion %><br />
    <%= f.text_area :body %>
  </div>
 <br />
 <%= f.submit 'Create Book' %>
 <% end %>

<h2>Book</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
       <% @book.each do |book| %>
      <th>
        <%= users_path(params[:id])%>
      </th>
      <% end %>
    </tr>
  </tbody>
</table>