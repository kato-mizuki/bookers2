<h1>User info</h1>
<%= form_with model: @user do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label :Introduction %><br />
    <%= f.text_area :introduction %>
  </div>

  <%= f.submit 'Update User' %>
  <% end %>