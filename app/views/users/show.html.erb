<div class="containar px-5 psx-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <% if @user.image.attached? %>
        <%= image_tag @user.image, size: "100x100" %>
       <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
       <% end %>
       <table >
         <tr>
           <th>name</th>
           <th></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th></th>
         </tr>
       </table>
       <div class="row">
         <a class="btn btn-outline-secondary btn-block edit_user_id" href="edit_user_path">
             <i class="fas fa-user-cog" area-hidden="true"></i>
         </a>
       </div>
       <h2>New book</h2>
        <%= form_with model: Book.new do |f| %>
        <div class="field">
         <%= f.label :Title %><br />
         <%= f.text_field :title %>
        </div>

         <div class="field">
           <%= f.label :Opinion %><br />
           <%= f.text_area :body %>
         </div>
         <br />
           <%= f.submit 'Create Book' %>
          <% end %>
    </div>
  </div>
</div>

<div class="col-md-8 offfset-md-1">
  <h2>Boooks</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>
