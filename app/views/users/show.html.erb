<h2>User info</h2>



<%= link_to edit_user_path do %>
  <i class="fas fa-user-cog"></i>
<% end %>
<h2>New book</h2>
 <%= form_with model: Book.new do |f| %>
 <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Opinion %><br />
    <%= f.text_area :body %>
  </div>
 <br />
 <%= f.submit 'Create Book' %>
 <% end %>
