<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/31634c652a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-black">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
        </div>
      </nav>
      <button class="navbar-toggler" type="button" data-toggler="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
      aria-expranded="true" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        <i class="fas fa-bars"></i>
      </button>
     <% if user_signed_in? %>
     <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
       <ul class="navbar-nav ml-auto">
         <li>
           <%= link_to "Home", '/' %>
           <i class="fas fa-home">
             ::before
           </i>
         </li>
       </ul>
     </div>
     <li>
       <%= link_to "Home", '/' %>
     </li>
     <li>
       <%= link_to "User", user_registration_path %>
     </li>
     <li>
       <%= link_to "Books", books_path %>
     </li>
     <li>
       <%= link_to "Log out", destroy_user_session_path, method: :delete %>
     </li>
     <% else %>
      <li>
        <%= link_to "Home", '/' %>
      </li>
      <li>
        <%= link_to "About", home_about_path %>
      </li>
      <li>
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "Log in", new_user_session_path %>
      </li>
     <% end %>
    </header>
    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
